#include <iostream>
#include <stdlib.h>
#include <time.h>


//main
    string formas[6] = {"", "circulo", "cuadrado", "triangulo", "rectangulo", "ovalo"};
    string figura, gua;
  
    
		int numeroA,vida;
		srand(time(NULL));
	    numeroA=rand()%(5);
	 
	    
    gua = formas[numeroA];
    vida=4;
    string aux(gua.size(), '-'); 


    do {
		cout<<endl;
        cout << "Ingrese palabra o caracter: ";
        cin >> figura;

		system("cls");
		
		  bool acierto=false;
			
		
        for (int i = 0; i < figura.size(); i++) {
            for (int j = 0; j < gua.size(); j++) {
                if (figura[i] == gua[j]) {
                    aux[j] = figura[i];
					 acierto = true;   
                }		
            }
        }
        
           if (!acierto) {
            vida--; // Reduce la vida si no hay coincidencias
            cout<<endl;
            cout << "¡Incorrecto! Te quedan " << vida << " vidas." << endl;
            }
            
        
        if(aux==gua or figura==aux){
        	cout<<endl;
        	cout<<"¡ Felicidades has Terminado ! "<<endl;
        	break;
		};
		
		if(vida==0){
		 cout<<endl;
		 cout<<"¡ Felicidades has Perdido ! "<<endl;
         break;	
		}
		
		cout<<"--------"<<endl;
		cout<<"|      |"<<endl;
		cout<<"|      0 "<<endl;
		cout<<"|     /|\\ "<<endl;
		cout<<"|     / \\ "<<endl;
		cout<<"|         "<<endl;
		cout<<"|         "<<endl;
		cout<<"__        "<<endl;

    

        // Muestra los resultados
		    cout<<endl;
        cout << "Resultado: " << aux <<"\t"<<"Vidas: \t"<<vida<<endl;
       
        
    } while (figura != gua);
